# Telegram API Configuration
# Get these from https://my.telegram.org/apps
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Bot Configuration
BOT_TOKEN=your_bot_token_here
BOT_SESSION_NAME=bot_session

# Admin Configuration
ADMIN_ID=your_admin_user_id_here

# Channel Configuration (where filtered messages will be forwarded)
CHANNEL_ID=your_channel_id_or_username

# Client Configuration
CLIENTS_JSON_PATH=clients.json

# Rate Limiting Configuration
RATE_LIMIT_SLEEP=60
GROUPS_BATCH_SIZE=10
GROUPS_UPDATE_SLEEP=60

# Port Configuration (optional)
HTTP_PORT=80
HTTPS_PORT=443
TELEGRAM_PORT=443

# Report Check Bot Configuration (optional)
# Username or ID of the bot that checks report status (e.g., @reportcheckbot or 123456789)
REPORT_CHECK_BOT=your_report_check_bot_username_or_id

